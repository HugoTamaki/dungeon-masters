<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Dungeon Masters" %></title>
    <%= render 'shared/meta_tags' %>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

    <%= javascript_include_tag "application" %>
  </head>
  <body>

    <%= render partial: 'layouts/menu' %>

    <div class="all">
      <div id="flashes">
        <div class="container">
          <% if flash[:notice] %>
            <div class="alert alert-success">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:error] || flash[:errors] || flash[:alert] %>
            <div class="alert alert-danger">
              <% if flash[:alert].class == Hash %>
                <% flash[:alert][:errors].each do |error| %>
                  <p><%= error %></p>
                <% end %>
              <% else %>
                <%= flash[:error] || flash[:errors] || flash[:alert]  %>
              <% end %>
            </div>
          <% end %>

          <% flash[:error] = flash[:errors] = flash[:notice] = flash[:alert] = nil %>
        </div>
      </div>
      <%= yield %>

      <!-- <footer>
        <p>&copy; Company 2013</p>
      </footer> -->

    </div> <!-- /container -->

  </body>
</html>
