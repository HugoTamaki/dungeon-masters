<div class="container">
  <div class="row row-centered">
    <h1><%= t "contact.contact" %></h1>
    <div class="col-lg-4 col-centered">
      <p><%= t "contact.find_bug" %></p>
      <%= form_tag send_message_path, method: :get, id: 'contact-form' do %>
        <div class="errors"></div>
        <div class="form-inputs">
          <div class="form-group">
            <%= label_tag 'Email' %>
            <%= text_field_tag :email, nil, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= label_tag 'Mensagem' %>
            <%= text_area_tag :message, nil, class: 'form-control', rows: 15 %>
          </div>

          <div id="check"></div>
        </div>

        <div class="form-actions">
          <%= submit_tag "Enviar", class: 'btn btn-primary btn-lg', id: 'contact-submit' %>
        </div>
      <% end %>
    </div>
  </div>
    
</div>