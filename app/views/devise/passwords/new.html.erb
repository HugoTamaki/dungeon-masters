<div class="container">
  <div class="row row-centered">
    <div class="col-lg-4 col-centered">
      <h2>Esqueceu sua senha?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-group">
            <%= f.input :email, :required => true, :autofocus => true, input_html: {class: 'form-control'} %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envie-me instruções para redefinição de senha", class: "btn btn-primary btn-block new-pass" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
