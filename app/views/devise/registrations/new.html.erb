<div class="container user_div">
  <h2><%= t('account.registration.new.title') %></h2>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :name, label: t('account.registration.new.name'),:required => true, :autofocus => true, input_html: {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.input :email, label: t('account.registration.new.email'), :required => true, input_html: {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.input :about_me, label: t('account.registration.edit.about_me'), :required => false, input_html: {class: 'form-control', rows: 10} %>
      </div>
      <div class="form-group">
        <%= f.input :password, label: t('account.registration.new.password'), :required => true, input_html: {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, label: t('account.registration.new.password_confirmation'), :required => true, input_html: {class: 'form-control'} %>  
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('account.registration.new.button'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  
</div>
