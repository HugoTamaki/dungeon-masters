<div class="container">
  <h2><%= t('account.registration.new.title') %></h2>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, label: t('account.registration.new.name'),:required => true, :autofocus => true %>
      <%= f.input :email, label: t('account.registration.new.email'), :required => true %>
      <%= f.input :password, label: t('account.registration.new.password'), :required => true %>
      <%= f.input :password_confirmation, label: t('account.registration.new.password_confirmation'), :required => true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('account.registration.new.button'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  
</div>
