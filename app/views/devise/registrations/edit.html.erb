<div class="container">
  <h2><%= t('account.registration.edit.title') %></h2>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, label: t('account.registration.edit.name'), :required => true, :autofocus => true %>
      <%= f.input :email, label: t('account.registration.edit.email'), :required => true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, label: t('account.registration.edit.password'), :autocomplete => "off", :hint => t('account.registration.edit.hint_blank'), :required => false %>
      <%= f.input :password_confirmation, label: t('account.registration.edit.password_confirmation'), :required => false %>
      <%= f.input :current_password, label: t('account.registration.edit.current_password'), :hint => t('account.registration.edit.hint_password'), :required => true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('account.registration.edit.button'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p><%= t('account.registration.edit.unhappy') %><%= link_to t('account.registration.edit.cancel_account'), registration_path(resource_name), :data => { :confirm => t('are_you_sure') }, :method => :delete %></p>

  <%= link_to t('back'), :back %>
  
</div>
