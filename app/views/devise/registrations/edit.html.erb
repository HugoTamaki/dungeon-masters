<div class="container user_div">
  <h2><%= t('account.registration.edit.title') %></h2>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :name, label: t('account.registration.edit.name'), :required => true, :autofocus => true, input_html: {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.input :email, label: t('account.registration.edit.email'), :required => true, input_html: {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.input :about_me, label: t('account.registration.edit.about_me'), :required => false, input_html: {class: 'form-control', rows: 10} %>
      </div>
      <div class="form-group">
        <%= f.input :password, label: t('account.registration.edit.password'), :autocomplete => "off", :hint => t('account.registration.edit.hint_blank'), :required => false, input_html: {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, label: t('account.registration.edit.password_confirmation'), :required => false, input_html: {class: 'form-control'} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('account.registration.edit.button'), class: 'btn btn-primary' %>
      </div>
      
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
    </div>

    
  <% end %>

  <h3>Cancele minha conta</h3>

  <p><%= t('account.registration.edit.unhappy') %><%= link_to t('account.registration.edit.cancel_account'), registration_path(resource_name), :data => { :confirm => t('are_you_sure') }, :method => :delete %></p>

  <%= link_to t('back'), :back %>
  
</div>
